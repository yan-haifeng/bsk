page {
	background-color: #fff !important;
}
.logo_wapper {
	position: relative;
	top: 200rpx;
	margin: auto;
	width: 150rpx;
	height: 150rpx;
}
.logo_wapper image{
	width: 100%;
	height: 100%;
	border-radius: 30rpx;
}
.login_form {
	position: relative;
	top: 300rpx;
	width: 100%;
	height: 700rpx;
	padding: 40rpx 60rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.login_form .form_input {
	width: 100%;
	height: 80rpx;
	margin-bottom: 60rpx;
	margin-top: 20rpx;
	border-bottom: 2rpx solid #d8d8d8;
}
.login_form .form_input input {
	border: none;
	width: 100%;
	height: 95%;
}
.login_form .login_submit {
	width: 100%;
	height: 80rpx;
	border-radius: 80rpx;
	background: -webkit-gradient(linear, left top, right top, from(#FE7196), to(#FF1850));
	background: -o-linear-gradient(left, #FE7196, #FF1850);
	background: linear-gradient(to right, #FE7196, #FF1850);
	margin-top: 70rpx;
	color: #fff;
	float: right;
	line-height: 80rpx;
	text-align: center;
	font-size: 32rpx;
}
.login_form .v_code_input input {
	width: 50%;
	height: 95%;
	float: left;
	margin-right: 40rpx;
}
.login_form .v_code_input .get_code_btn:active{
	background: -webkit-gradient(linear, right top, left top, from(#FE7196), to(#FF1850));
	background: -o-linear-gradient(right, #FE7196, #FF1850);
	background: linear-gradient(to left, #FE7196, #FF1850);
}
.login_form .func_btn_wapper{
	float: right;
}
.login_form .func_btn_wapper view{
		display: inline-block;
		font-size: 24rpx;
		margin-left: 40rpx;
		color: #FF1850;
}
.login_form .func_btn_wapper view:active{
	color: #FE7196;
}
.login_form .login_submit:active{
	background: -webkit-gradient(linear, right top, left top, from(#FE7196), to(#FF1850));
	background: -o-linear-gradient(right, #FE7196, #FF1850);
	background: linear-gradient(to left, #FE7196, #FF1850);
}

