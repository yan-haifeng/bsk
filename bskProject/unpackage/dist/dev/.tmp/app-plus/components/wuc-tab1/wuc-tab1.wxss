
._div,
scroll-view,
swiper {
	display: block;
	font-size: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.wuc-tab {
	padding: 0 10rpx;
	/* border-top: 5px solid #F2F2F2; */
    white-space: nowrap;
}
.wuc-tab-item {
    height: 90rpx;
    display: inline-block;
    line-height: 90rpx;
    margin: 0 10rpx;
    padding: 0 0rpx;
}
.wuc-tab-item ._span {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-left: 20rpx;
	padding: 10rpx 30rpx;
	background-color: #e8e8e8;
	border-radius: 100rpx;
}
.wuc-tab-item .cur {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 10rpx 30rpx;
	background-color: #FF1850;
	border-radius: 100rpx;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	-webkit-box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
